  end
end

target 'Utility' do
  project '../Utility/Utility'
  inherit! :search_paths
  
  use_frameworks!
  
  pod 'SwiftDate', '~> 5.0'
  
  inhibit_all_warnings!

  target 'UtilityTests' do
